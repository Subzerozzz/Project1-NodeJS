extends ../layouts/default.pug

block main
  h1.box-title Quản lý danh mục

  //- Section 4
  .section-4
    .inner-wrap
      .inner-item.inner-label
        <i class="fa-solid fa-filter"></i> Bộ lọc
      .inner-item
        select
          option(value="") Trạng thái
          option(value="") Hoạt động
          option(value="") Tạm dừng
      .inner-item
        select
          option(value="") Người tạo
          option(value="") Lê Văn A
          option(value="") Lê Văn B
      .inner-item.inner-date
        input(type="date")
        span -
        input(type="date")
      .inner-item.inner-reset
        <i class="fa-solid fa-rotate-left"></i> Xóa bộ lọc
  //- End Section 4

  //- Section 5
  .section-5
    .inner-wrap
      .inner-change-status
        .inner-item
          select
            option(value="") -- Hành động --
            option(value="") Hoạt động
            option(value="") Dừng hoạt động
            option(value="") Xóa
        .inner-item
          button Áp dụng
      .inner-search
        <i class="fa-solid fa-magnifying-glass"></i>
        input(type="text" placeholder="Tìm kiếm")
      .inner-button-create
        a(href=`/${urlAdmin}/category/create`) + Tạo mới
  //- End Section 5

  //- Section 6
  .section-6
    .table-2
      table
        thead
          tr
            th(class="inner-center")
              input(type="checkbox" class="inner-check")
            th Tên danh mục
            th Ảnh đại diện
            th(class="inner-center") Vị trí
            th(class="inner-center") Trạng thái
            th Tạo bởi
            th Cập nhật bởi
            th Hành động
        tbody
          each item in listCategory
            tr
              td(class="inner-center")
                input(type="checkbox" class="inner-check")
              td #{item.nameParent == "" ? "Chưa có" : `${item.nameParent}`}
              td
                img(src=item.avatar alt=item.name class="inner-avatar")
              td(class="inner-center") #{item.position}
              td(class="inner-center")
                .badge.badge-green #{item.status == 'active' ? 'Hoạt động' : 'Dừng hoạt động'}
              td
                div #{item.nameCreatedBy} 
                div.inner-time #{item.time} - #{item.date}
              td
                div #{item.nameUpdatedBy}
                div.inner-time #{item.time} - #{item.date}
              td
                .inner-buttons
                  button(class="inner-edit")
                    a(href=`/${urlAdmin}/category/edit/${item.slug}`) 
                     <i class="fa-regular fa-pen-to-square"></i>
                  button(class="inner-delete") <i class="fa-regular fa-trash-can"></i>
  //- End Section 6

  //- Section 7
  .section-7
    span(class="inner-label") Hiển thị 1 - 9 của 78
    select(class="inner-pagination")
      option Trang 1
      option Trang 2
      option Trang 3
  //- End Section 7